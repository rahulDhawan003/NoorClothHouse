<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="15dp"
        app:cardBackgroundColor="@color/cardbackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <ImageView
                android:id="@+id/card_stock_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:background="@color/colorPrimary"/>

            <TextView
                android:id="@+id/card_short_no_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/card_stock_img"
                android:text="Short_no"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/card_stock_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_short_no_tv"
                android:layout_toRightOf="@id/card_stock_img"
                android:text="Name"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/card_stock_quantity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_stock_name_tv"
                android:layout_toRightOf="@id/card_stock_img"
                android:text="Quantity"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/card_stock_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_stock_quantity_tv"
                android:layout_toRightOf="@id/card_stock_img"
                android:text="Name"
                android:textSize="30sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>